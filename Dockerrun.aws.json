{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "nginx",
            "image": "nginx:alpine",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "links": ["app"],
            "mountPoints": [
                {
                    "sourceVolume": "nginx-conf",
                    "containerPath": "/etc/nginx/conf.d/default.conf"
                }
            ]
        },
        {
            "name": "app",
            "image": "absharhassan/sims-app-main-image",
            "essential": true,
            "memory": 300,
            "links": ["db"]
        },
        {
            "name": "mysql",
            "image": "mysql:8.0",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "containerPort": 3306,
                    "hostPort": 3306
                }
            ],
            "environment": [
                {
                    "name": "MYSQL_DATABASE",
                    "value": "${env:DB_DATABASE}"
                },
                {
                    "name": "MYSQL_USER",
                    "value": "${env:DB_DATABASE}"
                },
                {
                    "name": "MYSQL_PASSWORD",
                    "value": "${env:DB_PASSWORD}"
                },
                {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "value": "${env:DB_PASSWORD}"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "mysql-data",
                    "containerPath": "/var/lib/mysql"
                }
            ]
        }
    ],
    "volumes": [
        {
            "name": "nginx-conf",
            "host": {
                "sourcePath": "./nginx/conf.d/default.conf"
            }
        },
        {
            "name": "mysql-data",
            "host": {
                "sourcePath": "./mysql"
            }
        }
    ]
}
